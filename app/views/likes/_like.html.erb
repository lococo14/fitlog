<% if current_user.liked_by?(log.id) %>
  <%= link_to destroy_like_path(log), class: 'like-link', method: :DELETE, remote: true do %>
    <i class="fa fa-heart unlike-btn"></i>
  <% end %>
  <%= log.likes.count %>
<% else %>
  <%= link_to create_like_path(log), class: 'like-link', method: :POST, remote: true do %>
    <i class="fa fa-heart like-btn"></i>
  <% end %> 
  <%= log.likes.count %>  
<% end %>
