<div class="card-group">
<div class="d-flex justify-content-xl-around">
<div class="col-xl-3 col-md-4 col-sm-6">
  <div class="card p-3 mt-3 shadow-none bg-light border-danger " style="width: 18rem;"> 
    <div class="card-header d-inline text-muted"> 
      <span class="training-name"><%= link_to log.title, log_path(log[:id]), method: :get, class: 'log-title' %>の日</span>
      <span class="training-day">（<%= log.day.name %>）</span>
      <span class="user-name">by <%= link_to "#{log.user.nickname}", user_path(log.user.id), class: 'log-user'%></span>
  </div> 
    <% log.trainings.each do |training| %>
    <ul class="list-group list-group-flush"> 
      <li class="list-group-item"> 
        <%= training.training %>
        <%= training.weight_kg %><span>kg</span>
        <%= training.weight_lb %><span>lb</span>
        <%= training.rep %><span>回</span>
        <%= training.set_number %><span>セット</span>
     </li> 
    </ul>  
    <% end %> 
  </div> 
</div> 
</div>
</div>